<form action="/visit" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Ваше имя</label>
    <input name="user_name" type="text" class="form-control" placeholder="Ваше имя" value="<%=@user_name%>">
    <small id="emailHelp" class="form-text text-muted">We'll never share your Name with anyone else.</small>
  </div>

    <div class="form-group">
    <label for="exampleInputEmail1">Ваш телефон</label>
    <input name="user_phone" type="text" class="form-control" placeholder="Ваш телефон" value="<%=@user_phone%>">
    <small id="emailHelp" class="form-text text-muted">We'll never share your Number phone with anyone else.</small>
  </div>

    <div class="form-group">
    <label for="exampleInputEmail1">Когда Вас ждать</label>
    <input name="date_time" type="text" class="form-control" placeholder="Дата и время" value="<%=@date_time%>">
  
  </div>

  <div class="form-group">
    <label for="exampleFormControlSelect1">Выберите парикмахера!</label>
    <select name="professional" type="text" class="form-control" id="exampleFormControlSelect1">
      <option>Марина</option>
      <option>Карина</option>
      <option>Юра</option>
      <option>Тема</option>
      <option>Миша</option>
    </select>
  </div>
 
 

   <div class="form-group">
      <label for="exampleInputEmail1">Выберите цвет краски:</label>
       <select name="colorpicker">
          <option value="#7bd148">Green</option>
          <option value="#5484ed">Bold blue</option>
          <option value="#a4bdfc">Blue</option>
          <option value="#46d6db">Turquoise</option>
          <option value="#7ae7bf">Light green</option>
          <option value="#51b749">Bold green</option>
          <option value="#fbd75b">Yellow</option>
          <option value="#ffb878">Orange</option>
          <option value="#ff887c">Red</option>
          <option value="#dc2127">Bold red</option>
          <option value="#dbadff">Purple</option>
          <option value="#e1e1e1">Gray</option>
          <option value="#272d31">Black</option>
       </select>
    
    </div>

     <button type="submit" class="btn btn-primary">Записаться</button>

</form>


